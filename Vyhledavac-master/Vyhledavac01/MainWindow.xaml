<Window x:Class="Vyhledavac01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vyhledavac01"
        mc:Ignorable="d"
        Title="Vyhledavač" Height="450" Width="800" WindowState="Maximized">
	<Grid x:Name="main_widow_colorssss" Width="NaN" Height="NaN" Background="White">
		<DataGrid Name="datagrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="20,173,20,20" FontFamily="Microsoft Sans Serif" AlternatingRowBackground="#FFC9C9C9" BorderBrush="Black"/>
		<Label x:Name="Nazev_programu" Content="Vyhledávač" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="40"/>
		<TextBox Name="textbox" HorizontalAlignment="Center" Margin="0,129,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300" FontSize="20" FontFamily="Microsoft Sans Serif" SelectionBrush="{x:Null}"/>
		<Button x:Name="dark_light_BUTTON" Content="Dark" HorizontalAlignment="Right" Height="27" Margin="0,10,10,0" VerticalAlignment="Top" Width="80" BorderBrush="Black" Background="#FFEBEBEB" FontFamily="Microsoft Sans Serif" Click="dark_light_BUTTON_Click"/>

	</Grid>
</Window>
